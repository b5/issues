	// 	width 100%
	.close
		position absolute
		top 20px
		right 15px
.fullscreen.modal
	width 100%
	height 100%
	max-width inherit
	max-height inherit
	margin 0
	top 0
	padding 2.5%
.confirm.modal .buttons
	position absolute
	bottom 2.5%
	left 2.5%
	width 95%
	button
		width 48%
		margin 1%
		float left
	

.validTextInput
	position relative
	.indicator
		position absolute
		right 8px
		top 12px

.valid .indicator, .valid .message
	color green
.invalid .indicator, .invalid .message
	color red

.dateTimePicker 
	margin 0 auto
	position relative
	.picker
		position absolute
		border-radius 2px
		z-index 3
		left 0
		top 100%
		background white
		height 200px
		width 280px
		box-shadow 0 0 3px #666
		&::after
			content ""
			clear both
			display block
		.segment
			color #999
			height 200px
			overflow hidden
			position relative
			float left
			/* Prevent native touch events on Windows */
			-ms-touch-action: none;
			/* Prevent the callout on tap-hold and text selection */
			-webkit-touch-callout none
			-webkit-user-select none
			-moz-user-select none
			-ms-user-select none
			user-select none
			/* Prevent text resize on orientation change, useful for web-apps */
			-webkit-text-size-adjust none
			-moz-text-size-adjust none
			-ms-text-size-adjust none
			-o-text-size-adjust none
			text-size-adjust none
			ul
				padding 0
				margin 0
				list-style none
				position absolute
				/* Prevent elements to be highlighted on tap */
				-webkit-tap-highlight-color rgba(0,0,0,0)
				/* Put the scroller into the HW Compositing layer right from the start */
				-webkit-transform translateZ(0)
				-moz-transform translateZ(0)
				-ms-transform translateZ(0)
				-o-transform translateZ(0)
				transform translateZ(0)
				li
					display block
					width 100%
					height 40px
					margin 0
					font-size 20px
					line-height 1.45em
				li.selected
					color black
		.day
			width 35%
			margin-left 5%
			margin-right 0
		.hour, .minute, .phase
			width 18%
			margin-left 1%
			margin-right 1%
			
.timeSpanInput
	width 100%
	height 280px // 56px * 5
	overflow hidden
	position relative
	.picker
		height 100%
		width 43%
		position absolute
		overflow hidden
		ul
			list-style none
			padding 0
			li
				text-align center
				height 56px
				opacity 0.45
				display block
				padding-top 10px
			li.selected
				opacity 1.0
	.end.picker
		left 50%
	.divider
		width 5%
		height 5%
		padding 0
		margin 0
		position absolute
		text-align center
		top 43.5%
		left 45%
	&:after
		content " "
		clear both
		display block
		height 0
		
.gridView
	width 100%
	height 300px
	overflow hidden
	position relative
	-webkit-transform translate3d(0,0,0)
	-moz-transform translate3d(0,0,0)
	-ms-transform translate3d(0,0,0)
	-o-transform translate3d(0,0,0)
	transform translate3d(0,0,0)
	.viewport
		overflow auto
		position absolute
		top 0
		left 0
		bottom -10px
		right -10px
		z-index 3
	header.header
		padding 0
		margin 0
		color white
		z-index 2
	.colHeader
		background primary
		padding 2px 4px
		z-index 1
	.pinned
		z-index 2
	section.table
		overflow auto
		.row
			margin 0
			min-height 0
		.cell
			background white
			border-bottom 1px solid rgb(230,230,230)
			border-right 1px solid rgb(230,230,230)
			line-height 20px
			padding 2px 4px
		.odd .cell
			background rgb(240,240,240)
		.pinned
			z-index 1
			box-shadow 2px 2px 2px rgba(0,0,0,0.15)
	.scrollBar
		z-index 2
		border-radius 3px
		background rgba(0,0,0,0.25)
		box-shadow 0 0 4px rgba(0,0,0,0.15)
		position absolute

// Sweet spinner courtsey of:
// http://tobiasahlin.com/spinkit
.spinner
	margin 50px auto 0
	width 70px
	text-align center
	> div
		width 18px
		height 18px
		background-color halfBackground
		border-radius 100%
		display inline-block
		-webkit-animation bouncedelay 1.4s infinite ease-in-out
		animation bouncedelay 1.4s infinite ease-in-out
		/* Prevent first frame from flickering when animation starts */
		-webkit-animation-fill-mode both
		animation-fill-mode both
	.bounce1
		-webkit-animation-delay -0.32s
		animation-delay -0.32s
	.bounce2
		-webkit-animation-delay -0.16s
		animation-delay -0.16s

